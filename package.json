{
  "dependencies": {
    "bootstrap-icons": "^1.11.3"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "babel-loader": "^10.0.0",
    "cpx": "^1.5.0",
    "sass": "^1.85.1",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  },
  "scripts": {
    "build:css": "sass src/scss/main.scss:public/css/main.css --style compressed",
    "build:js": "webpack --config webpack.config.js",
    "copy:fonts": "mkdir -p public/fonts && cpx \"node_modules/bootstrap-icons/font/fonts/**/*\" public/fonts",
    "build": "yarn copy:fonts && yarn build:css && yarn build:js",
    "watch:css": "sass src/scss/main.scss:public/css/main.css --watch",
    "watch:js": "webpack --config webpack.config.js --watch",
    "dev": "yarn build && yarn watch:css & yarn watch:js",
    "serve": "webpack serve --config webpack.config.js"
  }
}
